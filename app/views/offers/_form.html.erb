<%= simple_form_for @offer, html: { multipart: true } do |f| %>
  <%= f.error_notification %>


<div class="field">
<%= f.label :image %>
<%= f.file_field :image %>

</div>

  <div class="form-inputs">
    <%= f.input :company %>
    <%= f.input :type %>
    <%= f.input :remuneration %>
    <%= f.input :city %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
